<h1>All Flats</h1>

<div class="flats">
  <% @flats.each do |flat| %>
    <div class="flat flex-lg-column">
       <div class="row1">
      <h2><%= flat.name %></h2>
      <p><%= flat.address %></p>
      <p><%= flat.description %></p>
      <p><i class="fas fa-dollar-sign"></i> Price per night: $<%= flat.price_per_night %></p>
      <p><i class="fas fa-users"></i> Number of guests: <%= flat.number_of_guests %></p>
      </div>
      <div class="row2 d-flex justify-content-around">
        <%= link_to 'More info', flat_path(flat), class: 'btn btn-outline-primary btn-sm' %>
        <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-outline-warning btn-sm' %>
        <%= link_to 'Delete', flat_path(flat), data: {turbo_method: :delete, confirm: 'Are you sure you want to delete this flat?' }, class: 'btn btn-outline-danger btn-sm' %>
      </div>
    </div>
  <% end %>
</div>
